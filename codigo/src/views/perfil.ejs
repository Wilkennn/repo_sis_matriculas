<%- include('partials/header.html') %>

<div class="container mt-5">
    <!-- Cabeçalho do Perfil -->
    <div class="profile-header mb-4">
        <h2 class="mb-1"><%= aluno.usuario.nome %></h2>
        <p class="text-muted"><%= aluno.usuario.login %></p>
    </div>

    <!-- Informações Pessoais -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Informações Pessoais</h5>
            <p class="card-text"><strong>Email:</strong> <%= aluno.usuario.email %></p>
            <p class="card-text"><strong>Telefone:</strong> <%= aluno.usuario.telefone %></p>
            <p class="card-text"><strong>Endereço:</strong> <%= aluno.usuario.endereco %></p>
            <p class="card-text"><strong>CPF:</strong> <%= aluno.usuario.cpf %></p>
            <p class="card-text"><strong>Data de Nascimento:</strong> <%= aluno.usuario.dataNascimento.toISOString().split('T')[0] %></p>
        </div>
    </div>

    <!-- Cursos do Aluno -->
    <% if (aluno.cursos && aluno.cursos.length > 0) { %>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Cursos</h5>
                <% aluno.cursos.forEach(c => { %>
                    <div class="mb-3">
                        <h6 class="card-subtitle mb-2 text-muted"><%= c.curso.nome %></h6>
                        <p class="card-text"><strong>Período:</strong> <%= c.periodo %></p>
                        <p class="card-text"><strong>Status:</strong> <%= c.cursoStatus %></p>
                    </div>
                <% }) %>
            </div>
        </div>
    <% } %>
</div>

<%- include('partials/footer.html') %>
