<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alunos Matriculados</title>
    <link rel="stylesheet" href="/css/alunos_matriculados.css">
</head>
<body>
    <div class="container">
        <h1>Alunos Matriculados</h1>
        <form action="/alunos" method="get">
            <div class="filters">
                <div class="form-group">
                    <label for="nome">Matricula:</label>
                    <input type="text" id="matricula" name="matricula" placeholder="Buscar por Matricula">
                </div>

                <div class="form-group">
                    <label for="nome">Nome do Aluno:</label>
                    <input type="text" id="nome" name="nome" placeholder="Buscar por nome">
                </div>

                <div class="form-group">
                    <label for="disciplina">Disciplina:</label>
                    <select id="disciplina" name="disciplina">
                        <option value="">Todos</option>
                        <% disciplinas.forEach(disciplina => { %>
                            <option value="<%= disciplina.id %>"><%= disciplina.nome %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="status">Status:</label>
                    <select id="status" name="status">
                        <option value="">Todos</option>
                        <option value="Matriculado">Matriculado</option>
                        <option value="Pendente">Pendente</option>
                    </select>
                </div>
            </div>
            <button type="submit">Visualizar</button>
        </form>

        <% if (alunos && alunos.length > 0) { %>
            <h2>Lista de Alunos</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Matr√≠cula</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% alunos.forEach(aluno => { %>
                        <tr>
                            <td><%= aluno.nome %></td>
                            <td><%= aluno.matricula %></td>
                            <td><%= aluno.status %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else if (alunos) { %>
            <p>Nenhum aluno encontrado.</p>
        <% } %>
    </div>
</body>
</html>
